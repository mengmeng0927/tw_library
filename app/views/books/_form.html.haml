= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :publisher
    = f.text_field :publisher
  .field
    = f.label :ISBN
    = f.text_field :ISBN
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :language
    = f.text_field :language
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :image_url
    = f.text_field :image_url
  .actions
    = f.submit 'Save'
